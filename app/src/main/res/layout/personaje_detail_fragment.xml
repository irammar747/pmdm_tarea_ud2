<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingHorizontal="30sp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:contentDescription="@string/name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        style="@style/nombrePersonaje"/>

    <TextView
        android:id="@+id/personaje_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion"
        android:contentDescription="@string/descripcion"
        android:textSize="25sp"
        android:layout_marginTop="4dp"
        style="@style/descripcionPersonaje"/>

    <TextView
        android:id="@+id/ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/habilidades"
        android:contentDescription="@string/habilidades"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        style="@style/habilidadPersonaje"/>

</LinearLayout>